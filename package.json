{
	"type": "module",
	"name": "harper-edge-ai-example",
	"version": "1.0.0",
	"description": "Harper Edge AI example with ONNX Runtime, TensorFlow.js, Transformers.js, and Ollama backends",
	"main": "src/resources.js",
	"bin": {
		"harper-ai": "./scripts/cli/harper-ai.js"
	},
	"scripts": {
		"preinstall": "echo '\nğŸ“¦ Installing dependencies (this may take 1-2 minutes)...\n'",
		"postinstall": "echo '\nâœ… Installation complete!\n\nğŸ“ Next steps:\n   npm run dev       - Start Harper server\n   npm run preload   - Load test models\n   npm run benchmark - Compare backends\n'",
		"test": "node --test tests/unit/**/*.test.js",
		"test:unit": "node --test tests/unit/**/*.test.js",
		"test:integration": "node --test tests/integration/**/*.test.js",
		"test:all": "npm run test:unit && npm run test:integration",
		"test:model-fetch": "node scripts/test-model-fetch.js",
		"test:profile": "node scripts/test-profile-deployment.js",
		"test:profile:testing": "node scripts/test-profile-deployment.js --profile testing",
		"test:profile:benchmarking": "node scripts/test-profile-deployment.js --profile benchmarking",
		"test:profile:deploy": "node scripts/test-profile-deployment.js --deploy",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"dev": "harper dev .",
		"start": "harper run .",
		"clean": "rm -rf node_modules package-lock.json",
		"verify": "node -e \"console.log('Node version:', process.version); console.log('âœ… Environment OK')\"",
		"preload": "node scripts/preload-models.js",
		"preload:testing": "node scripts/preload-models.js --profile testing --clean",
		"preload:benchmarking": "node scripts/preload-models.js --profile benchmarking --clean",
		"benchmark": "node scripts/run-benchmark.js",
		"benchmark:all": "node scripts/run-benchmark.js --all",
		"pull-ollama": "node scripts/pull-ollama-models.js",
		"generate-test-models": "node scripts/generate-test-models.js",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yaml,yml}": [
			"prettier --write"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/HarperDB/harper-edge-ai-example.git"
	},
	"keywords": [
		"harperdb",
		"edge-ai",
		"machine-learning",
		"mlops",
		"onnx",
		"tensorflow",
		"transformers",
		"ollama",
		"embeddings",
		"inference-engine"
	],
	"author": "HarperDB",
	"license": "Apache-2.0",
	"dependencies": {
		"@xenova/transformers": "^2.17.2",
		"onnxruntime-node": "1.20.1",
		"onnxruntime-web": "^1.23.2",
		"uuid": "^11.0.3"
	},
	"optionalDependencies": {
		"sharp": "^0.32.6"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"os": [
		"darwin",
		"linux"
	],
	"devDependencies": {
		"@harperdb/code-guidelines": "^0.0.5",
		"eslint": "^9.36.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2"
	}
}
